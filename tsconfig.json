{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "rootDir": "./",
    "outDir": "**/dist",
    "incremental": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "**/src"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}